<form action="/spaces/new" method="post">
  <input type="text" name="name" placeholder="title"> <br> <br>
  <textarea name="description" rows="4" cols="50" placeholder="Add your description here"></textarea> <br> <br>
  <input type="number" name="price_per_night" min="1" step="any"> <br> <br>
  <input type="date" name="available_from" min="2020-01-01" max="2025-12-31"> <br> <br>
  <input type="date" name="available_to" min="2020-01-01" max="2025-12-31"> <br> <br>
  <input type="submit" name="submit">
</form>