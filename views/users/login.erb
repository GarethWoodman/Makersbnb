<h1>Please log in</h1>
<form action='/users/log-in' method='post'>
  <input type='text' name='username' placeholder='username' value="<%=session[:username]%>">
  <br>
  <input type='password' name='password' placeholder='password' value="<%=session[:password]%>">
  <br>
  <input type='submit' name='submit' value='submit'>
</form>

<h2><%= flash[:notice] %></h2>
