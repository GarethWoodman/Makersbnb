<html lang="en">
<head>

  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
<link rel="stylesheet" href="stylesheet.css">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
  <title>Spaced Out</title>
</head>
<body class='bg-dark text-white'>
		<nav style='background-color: #1a1a1a !important;' class="navbar navbar-expand navbar-dark bg-dark">
      <a class='navbar-brand' href="/">SPACED OUT</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse">
        <ul class="navbar-nav mr-auto">
          <% if session[:user] == nil %>
            <li class="nav-item active">
              <a class="nav-link" href="/users/new">Signup</a>
            </li>
            <li class="nav-item active">
              <a class="nav-link" href="/users/log-in">Login</a>
            </li>
          <% else %>
            <li class="nav-item active">
              <a class="nav-link" href="/spaces">Spaces</a>
            </li>
            <li class="nav-item active">
              <a class="nav-link" href="">Requests</a>
            </li>
            <li class="nav-item active">
              <a class="nav-link" href="/spaces/new">Add Space</a>
            </li>
            <li class="nav-item active">
              <a class="nav-link" href="/signout">Sign Out</a>
            </li>
          <% end %>
        </ul>
        <% if session[:user] != nil %>
          <span class="navbar-text">
            <%= @generated_user_greeting %><%= session[:user].realname %>.
         </span>
        <% end %>
      </div>
    </nav>
      <div class="col-6 offset-3">
          <div class="bg-dark text-white">
            <div class="mx-auto">
              <% if flash[:notice] %>
                <br>
                <br>
                <div class="alert alert-light alert-dismissible fade show" role="alert">
                  <strong><%= flash[:notice] %></strong>
                  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
              <% end %>
            </div>
   	      <%= yield %>
      </div>
    </div>
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
</body>
</html>
